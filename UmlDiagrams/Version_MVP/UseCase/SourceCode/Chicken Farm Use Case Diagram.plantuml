@startuml MVP_Use_Case_Diagram

!define RECTANGLE class

title Chicken Farm Management System - MVP Use Case Diagram

' System boundary
rectangle "Chicken Farm Management System" {
  
  ' ============ LOGIN & AUTHENTICATION ============
  usecase (Login) as UC1
  
  ' ============ DASHBOARD ============
  usecase (View Dashboard) as UC2
  usecase (View Total Chickens Count) as UC2.1
  usecase (View Today's Egg Production) as UC2.2
  usecase (View Active Alerts Count) as UC2.3
  usecase (View 7-Day Egg Production Chart) as UC2.4
  
  ' ============ CHICKEN BAY ============
  usecase (Manage Chicken Bay) as UC3
  usecase (View House Status) as UC3.1
  usecase (Add Chickens) as UC3.2
  usecase (Record Mortality) as UC3.3
  usecase (View Mortality Statistics) as UC3.4
  usecase (Transfer Chickens Between Houses) as UC3.5
  
  ' ============ EGGS BAY ============
  usecase (Manage Eggs Bay) as UC4
  usecase (View Egg Inventory) as UC4.1
  usecase (Record Egg Collection) as UC4.2
  usecase (Remove Eggs from Storage) as UC4.3
  usecase (Record Cracked Eggs) as UC4.4
  
  ' ============ STORAGE ============
  usecase (Manage Storage) as UC5
  usecase (Manage Feed) as UC5.1
  usecase (Add Feed) as UC5.1.1
  usecase (Use Feed) as UC5.1.2
  usecase (Manage Medications) as UC5.2
  usecase (Add Medication) as UC5.2.1
  usecase (Use Medication) as UC5.2.2
  usecase (Manage Equipment) as UC5.3
  usecase (Add Equipment) as UC5.3.1
  usecase (Update Equipment Status) as UC5.3.2
  
  ' ============ TASKS ============
  usecase (Manage Tasks) as UC6
  usecase (View Tasks) as UC6.1
  usecase (Create Task) as UC6.2
  usecase (Mark Task as Done) as UC6.3
  usecase (Edit Task) as UC6.4
  usecase (Delete Task) as UC6.5
  usecase (Assign Task to Worker) as UC6.6
  
  ' ============ PERSONNEL ============
  usecase (Manage Personnel) as UC7
  usecase (View Personnel List) as UC7.1
  usecase (Add Worker) as UC7.2
  usecase (Update Worker Info) as UC7.3
  usecase (Delete Worker) as UC7.4
  
}

' ============ ACTORS ============
actor "Admin User" as Admin

' ============ ACTOR-USECASE RELATIONSHIPS ============

' Login
Admin --> UC1

' Dashboard
Admin --> UC2

' Chicken Bay
Admin --> UC3

' Eggs Bay
Admin --> UC4

' Storage
Admin --> UC5

' Tasks
Admin --> UC6

' Personnel
Admin --> UC7

' ============ USECASE-USECASE RELATIONSHIPS ============

' Dashboard includes - these always happen when viewing dashboard
UC2 ..> UC2.1 : <<include>>
UC2 ..> UC2.2 : <<include>>
UC2 ..> UC2.3 : <<include>>
UC2 ..> UC2.4 : <<include>>

' Chicken Bay relationships
UC3 ..> UC3.1 : <<include>>
UC3 ..> UC3.4 : <<include>>
UC3 <.. UC3.2 : <<extend>>
UC3 <.. UC3.3 : <<extend>>
UC3 <.. UC3.5 : <<extend>>

' Eggs Bay relationships
UC4 ..> UC4.1 : <<include>>
UC4 <.. UC4.2 : <<extend>>
UC4 <.. UC4.3 : <<extend>>
UC4 <.. UC4.4 : <<extend>>

' Storage relationships - Feed
UC5 ..> UC5.1 : <<include>>
UC5 ..> UC5.2 : <<include>>
UC5 ..> UC5.3 : <<include>>
UC5.1 <.. UC5.1.1 : <<extend>>
UC5.1 <.. UC5.1.2 : <<extend>>

' Storage relationships - Medications
UC5.2 <.. UC5.2.1 : <<extend>>
UC5.2 <.. UC5.2.2 : <<extend>>

' Storage relationships - Equipment
UC5.3 <.. UC5.3.1 : <<extend>>
UC5.3 <.. UC5.3.2 : <<extend>>

' Tasks relationships
UC6 ..> UC6.1 : <<include>>
UC6 <.. UC6.2 : <<extend>>
UC6 <.. UC6.3 : <<extend>>
UC6 <.. UC6.4 : <<extend>>
UC6 <.. UC6.5 : <<extend>>
UC6.2 ..> UC6.6 : <<include>>

' Personnel relationships
UC7 ..> UC7.1 : <<include>>
UC7 <.. UC7.2 : <<extend>>
UC7 <.. UC7.3 : <<extend>>
UC7 <.. UC7.4 : <<extend>>

@end