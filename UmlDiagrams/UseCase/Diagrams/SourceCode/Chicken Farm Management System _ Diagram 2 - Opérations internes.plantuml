@startuml ChickenFarmInternalOperations
left to right direction
skinparam packageStyle rectangle
skinparam actorStyle awesome

' Primary Actors
actor "Cashier" as Cashier
actor "Veterinary" as Vet
actor "Inventory-Supply-Tracker" as Inventory
actor "Farmhand Supervisor" as Farmhand
actor "Administration" as Admin

' Worker generalization (note)
note top of Vet : Specialization of Worker
note top of Inventory : Specialization of Worker
note top of Farmhand : Specialization of Worker

package "Production and Health Management" {
  ' Chicken Lifecycle (9 cases)
  usecase "UC19: Register Chick Batch" as UC19
  usecase "UC20: Assign to House 1" as UC20
  usecase "UC21: Track Growth\nfor 24 Weeks" as UC21
  usecase "UC22: Separate by Gender" as UC22
  usecase "UC23: Transfer Males\nto House 4" as UC23
  usecase "UC24: Transfer Females\nto House 2" as UC24
  usecase "UC25: Transfer Old Layers\nto House 3" as UC25
  usecase "UC26: Plan Next Generation" as UC26
  usecase "UC27: Record Mortality" as UC27
  
  ' Inventory Management (5 cases)
  usecase "UC28: Track Feed Stock" as UC28
  usecase "UC29: Track Medication\nStock" as UC29
  usecase "UC30: Track Egg Stock" as UC30
  usecase "UC31: Track Equipment\nInventory" as UC31
  usecase "UC32: Generate Daily\nInventory Report" as UC32
  
  ' Health Management (5 cases)
  usecase "UC33: Perform Daily\nHealth Check" as UC33
  usecase "UC34: Record Disease\nSymptoms" as UC34
  usecase "UC35: Record Vaccination" as UC35
  usecase "UC36: Administer Medications" as UC36
  usecase "UC37: Generate Health\nRegister" as UC37
  
  ' House Management (3 cases)
  usecase "UC38: Verify House\nCleanliness" as UC38
  usecase "UC39: Report House Problem" as UC39
  usecase "UC40: Collect and Clean Eggs" as UC40
}

