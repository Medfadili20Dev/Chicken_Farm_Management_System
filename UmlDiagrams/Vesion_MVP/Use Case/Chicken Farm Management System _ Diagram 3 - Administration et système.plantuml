@startuml ChickenFarmAdministration
left to right direction
skinparam packageStyle rectangle
skinparam actorStyle awesome

' Primary Actors
actor "Cashier" as Cashier
actor "Administration" as Admin

' Secondary Actor
actor "Workers" as Workers

package "Administrative and Financial Management" {
  ' Staff Management (11 cases)
  usecase "UC41: Log In" as UC41
  usecase "UC42: Log Out" as UC42
  usecase "UC43: Generate Worker\nQR Code" as UC43
  usecase "UC44: Scan QR Code" as UC44
  usecase "UC45: Register New Worker" as UC45
  usecase "UC46: Create Employment\nContract" as UC46
  usecase "UC47: Calculate Attendance\nand Salary" as UC47
  usecase "UC48: Generate Payslip" as UC48
  usecase "UC49: Record Worker Payment" as UC49
  usecase "UC50: Export CNSS\nDeclaration" as UC50
  usecase "UC51: Process Worker Exit" as UC51
  
  ' Financial Management (4 cases)
  usecase "UC52: Track Expenses" as UC52
  usecase "UC53: Track Income" as UC53
  usecase "UC54: Generate Financial\nReports" as UC54
  usecase "UC55: Close Daily Cash\nRegister" as UC55
  
  ' Reports and System (5 cases)
  usecase "UC56: Generate Production\nReports" as UC56
  usecase "UC57: Generate Alerts" as UC57
  usecase "UC58: Export Legal Data\nONSSA" as UC58
  usecase "UC59: Configure System\nSettings" as UC59
  usecase "UC60: Save and Backup Data" as UC60
}

' Cashier associations (all use cases)
Cashier --> UC41
Cashier --> UC42
Cashier --> UC43
Cashier --> UC44
Cashier --> UC45
Cashier --> UC46
Cashier --> UC47
Cashier --> UC48
Cashier --> UC49
Cashier --> UC50
Cashier --> UC51
Cashier --> UC52
Cashier --> UC53
Cashier --> UC54
Cashier --> UC55
Cashier --> UC56
Cashier --> UC57
Cashier --> UC58
Cashier --> UC59
Cashier --> UC60

' Administration associations
Admin --> UC45
Admin --> UC46
Admin --> UC49
Admin --> UC51
Admin --> UC52
Admin --> UC53
Admin --> UC54
Admin --> UC55
Admin --> UC59

' Workers associations (only scan QR)
Workers --> UC44

' <<include>> relationships (mandatory)
UC45 ..> UC43 : <<include>>
UC45 ..> UC46 : <<include>>
UC47 ..> UC44 : <<include>>
UC48 ..> UC47 : <<include>>
UC49 ..> UC48 : <<include>>
UC50 ..> UC47 : <<include>>
UC51 ..> UC50 : <<include>>
UC54 ..> UC52 : <<include>>
UC54 ..> UC53 : <<include>>
UC57 ..> UC32 : <<include>>

' <<extend>> relationships (optional/conditional)
UC55 ..|> UC60 : <<extend>>

' Generalization between use cases
usecase "Manage Worker Lifecycle" as UC_Lifecycle #LightGray
UC_Lifecycle <|-- UC45
UC_Lifecycle <|-- UC51

usecase "Export Legal Data" as UC_Export #LightGray
UC_Export <|-- UC50
UC_Export <|-- UC58

usecase "Record Payment" as UC_Payment #LightGray
UC_Payment <|-- UC49

note right of UC32 : UC32 from Diagram 2\n(Inventory Report)

@enduml