@startuml CoreBusinessEntities

' ========================================
' CORE BUSINESS ENTITIES
' ========================================

class Company {
    +string companyID
    +string ice
    +string rc
    +string taxID
    +string cnssNumber
    +string onssaAuthorization
    +string bankDetails
    +string companyName
    +string address
    +Date registrationDate
    +float shareCapital
    +string legalForm
    +string businessField
}

' ========================================
' SUPPLIER HIERARCHY
' ========================================

abstract class Supplier {
    +string supplierID
    +string companyName
    +string ice
    +string rc
    +string contactPerson
    +string phone
    +string email
    +string address
    +string bankDetails
    +string[] productCategories
    +string supplierType
}

class FeedSupplier {
    +string feedType
    +string[] certifications
}

class ChickSupplier {
    +string breedSpecialty
    +string hatcheryLocation
}

class MedicationSupplier {
    +string[] certifications
    +boolean prescriptionRequired
}

class EquipmentSupplier {
    +string[] equipmentTypes
    +boolean providesInstallation
    +boolean providesMaintenance
}

' ========================================
' CUSTOMER HIERARCHY
' ========================================

abstract class Customer {
    +string customerID
    +string name
    +string phone
    +string email
    +string address
    +string customerType
}

class CompanyCustomer {
    +string companyName
    +string ice
    +string rc
    +string contactPerson
    +string bankDetails
    +int paymentTerms
    +string[] usualPurchases
}

class IndividualCustomer {
    +string fullName
    +string cin
    +int age
    +boolean isRegular
}

' ========================================
' PRODUCT HIERARCHY
' ========================================

abstract class Product {
    +string productID
    +string productName
    +string productType
    +float price
    +string unit
    +float weight
    +string description
}

class Egg {
    +Date productionDate
    +string qualityStatus
    +string size
    +string grade
}

class Feed {
    +string feedType
    +string ageGroup
    +float proteinContent
    +Date manufactureDate
    +Date expiryDate
}

class Medication {
    +string medicationType
    +string dosage
    +Date expiryDate
    +string prescription
    +string activeIngredient
    +int withdrawalPeriod
}

class Equipment {
    +string equipmentType
    +string condition
    +Date purchaseDate
    +Date lastMaintenanceDate
    +int warrantyMonths
    +string manufacturer
}

class Chicken {
    +string chickenType
    +string gender
    +float weight
    +int age
    +string healthStatus
}

' ========================================
' INHERITANCE RELATIONSHIPS
' ========================================

Supplier <|-- FeedSupplier : inherits
Supplier <|-- ChickSupplier : inherits
Supplier <|-- MedicationSupplier : inherits
Supplier <|-- EquipmentSupplier : inherits

Customer <|-- CompanyCustomer : inherits
Customer <|-- IndividualCustomer : inherits

Product <|-- Egg : inherits
Product <|-- Feed : inherits
Product <|-- Medication : inherits
Product <|-- Equipment : inherits
Product <|-- Chicken : inherits

' ========================================
' CORE BUSINESS RELATIONSHIPS
' ========================================

Company "1" -- "*" Supplier : purchases_from
Company "1" -- "*" Customer : sells_to
Supplier "1" -- "*" Product : provides >

' ========================================
' NOTES
' ========================================

note right of Company
    Central business entity
    Owns all farm data
    Moroccan legal entity
    {ice.length = 15}
    {rc is not null}
end note

note right of Supplier
    4 specialized types:
    - Feed
    - Chick
    - Medication
    - Equipment
end note

note right of Customer
    2 types:
    - Company (credit terms)
    - Individual (cash only)
end note

note right of Product
    5 product types:
    - Egg (produced)
    - Feed (consumed)
    - Medication (used)
    - Equipment (owned)
    - Chicken (sold)
end note

@enduml